# ============================================================
# Emlak Teknoloji Platformu - Environment Variables
# ============================================================
# Bu dosyayi .env olarak kopyalayin ve degerleri doldurun:
#   cp .env.example .env
# ============================================================

# ---------- App ----------
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ---------- PostgreSQL ----------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=emlak_dev
DB_USER=postgres
DB_PASSWORD=change_me_in_production

# ---------- App DB User (RLS) ----------
APP_DB_USER=app_user
APP_DB_PASSWORD=change_me_app_user_password

# ---------- Redis ----------
REDIS_URL=redis://localhost:6379/0

# ---------- Celery ----------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ---------- MinIO / S3 ----------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change_me_minio_secret
MINIO_BUCKET=emlak-media
MINIO_USE_SSL=false

# ---------- JWT ----------
JWT_SECRET_KEY=change_me_jwt_secret_key_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------- Sentry ----------
# Bos birakildigi taktirde Sentry devre disi kalir
SENTRY_DSN=

# ---------- OpenTelemetry ----------
# Docker ortaminda Tempo'ya gonderim icin: http://tempo:4317
# Lokal gelistirmede bos birakilirsa OTel devre disi kalir
OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4317
OTEL_SERVICE_NAME=emlak-api

# ---------- iyzico Payment Gateway ----------
# Sandbox: https://sandbox-api.iyzipay.com
# Production: https://api.iyzipay.com
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_WEBHOOK_SECRET=
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# ---------- Telegram Bot ----------
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=
